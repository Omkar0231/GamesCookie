# Server Configuration
NODE_ENV=production
PORT=8081

# Database Configuration
DB_HOST=localhost
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password
DB_DATABASE=gamescookie
DB_PORT=3306
DB_CONNECTION=mysql

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# SMTP/Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_EMAIL=noreply@gamescookie.com

# Memcached Configuration (optional)
MEMCACHED_HOST=localhost:11211

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:4173,https://gamescookie.com,https://www.gamescookie.com,https://play1.gamescookie.com,https://play2.gamescookie.com

# SSL/Domain Configuration (for deployment)
DOMAIN=gamescookie.com
ADMIN_EMAIL=admin@gamescookie.com

# Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads
